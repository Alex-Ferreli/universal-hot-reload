{
  "name": "universal-hot-reload",
  "version": "0.2.5",
  "description": "Hot reload client and server webpack bundles for the ultimate development experience",
  "main": "index.js",
  "scripts": {
    "test:watch": "mocha --compilers js:babel-core/register --require tests/setup.js tests/init.test.js --watch",
    "test": "mocha --compilers js:babel-core/register --require tests/setup.js tests/init.test.js",
    "compile": "rimraf lib/* && babel src -d lib",
    "prepublish": "npm run compile",
    "lint": "eslint --cache --format 'node_modules/eslint-friendly-formatter' ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yusinto/universal-hot-reload.git"
  },
  "keywords": [
    "universal",
    "hot",
    "reload",
    "client",
    "server",
    "webpack",
    "bundle"
  ],
  "author": "Yusinto Ngadiman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yusinto/universal-hot-reload/issues"
  },
  "homepage": "https://github.com/yusinto/universal-hot-reload#readme",
  "dependencies": {
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "rimraf": "^2.5.4"
  }
}
